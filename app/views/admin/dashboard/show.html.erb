<div class="container mt-4">
  <h2>Admin Dashboard</h2>
  <div class="row">
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Product Count</h5>
          <p class="card-text"><%= @product_count %> products in the database.</p>
          <%= link_to "View Products", admin_products_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
    <div class="col-md-6">
      <div class="card mb-3">
        <div class="card-body">
          <h5 class="card-title">Category Count</h5>
          <p class="card-text"><%= @category_count %> categories in the database.</p>
          <%= link_to "View Categories", admin_categories_path, class: "btn btn-primary" %>
        </div>
      </div>
    </div>
  </div>
</div>
